/dts-v1/;
#include <st/f0/stm32f072Xb.dtsi>
#include <st/f0/stm32f072c(8-b)tx-pinctrl.dtsi>
//#include <dt-bindings/led/led.h>

#include <dt-bindings/zmk/matrix_transform.h>

#include <physical_layouts.dtsi>

/ {
    model = "Keyseebee rev4";
    compatible = "sefodopo,keyseebee", "st,stm32f072";

    chosen {
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zmk,kscan = &kscan;
        //zmk,underglow = &led_strip;
    };

    matrix_transform: matrix_transform {
        compatible = "zmk,matrix-transform";

        compatible = "zmk,matrix-transform";
        columns = <7>;
        rows = <4>;
        map = <
            RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)  RC(0,5)
            RC(0,6)  RC(0,7)  RC(0,8)  RC(0,9)  RC(0,10) RC(0,11)
            RC(0,12) RC(0,13) RC(0,14) RC(0,15) RC(0,16) RC(0,17) RC(0,18)
                                       RC(0,19) RC(0,20) RC(0,21) RC(0,22)
        >;
    };

    physical_layout {
        compatible = "zmk,physical-layout";

        display-name = "Keyseebee";
        transform = <&matrix_transform>;

        //keys  //                     w   h    x    y     rot    rx    ry
        //    = <&key_physical_attrs 100 100    0    0       0     0     0>
        //    , <&key_physical_attrs 100 100  100    0       0     0     0>
        //    , <&key_physical_attrs 100 100  200    0       0     0     0>
        //    , <&key_physical_attrs 100 100    0  100       0     0     0>
        //    , <&key_physical_attrs 100 100  100  100       0     0     0>
        //    , <&key_physical_attrs 100 100  200  100       0     0     0>
        //    , <&key_physical_attrs 100 100    0  200       0     0     0>
        //    , <&key_physical_attrs 100 100  100  200       0     0     0>
        //    , <&key_physical_attrs 100 100  200  200       0     0     0>
        //    ;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-direct";

        input-gpios
            = <&gpiob 3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 15  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 15  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 8  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 14  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 5  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 7  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 1  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 2  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 0  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 10  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpiob 11  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 7  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 1  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 5  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 0  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 2  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 3  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            , <&gpioa 4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
            ;
    };

    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpiof 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpiof 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "okay";
    };
//    mid_encoder: encoder_mid {
//        compatible = "alps,ec11";
//        a-gpios = <&gpioa 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
//        b-gpios = <&gpioa 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
//        steps = <80>;
//        status = "disabled";
//    };
//    right_encoder: encoder_right {
//        compatible = "alps,ec11";
//        a-gpios = <&gpioa 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
//        b-gpios = <&gpiob 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
//        steps = <80>;
//        status = "disabled";
//    };
//
    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        status = "okay";
        sensors = <&left_encoder>;
        triggers-per-rotation = <20>;
    };
};

&clk_hsi {
    status = "okay";
};

&pll {
    status = "okay";
    prediv = <1>;
    mul = <6>;
    clocks = <&clk_hsi>;
};

&rcc {
    clocks = <&pll>;
    clock-frequency = <DT_FREQ_M(48)>;
    ahb-prescaler = <1>;
    apb1-prescaler = <1>;
};

zephyr_udc0: &usb {
    status = "okay";
    pinctrl-0 = <&usb_dm_pa11 &usb_dp_pa12>;
    pinctrl-names = "default";

    // Overridden to lower RAM usage.
    num-bidir-endpoints = <4>;
};

&rtc {
    status = "okay";
};

&flash0 {
    /*
     * For more information, see:
     * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
     */
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        /* Set 6Kb of storage at the end of the 128Kb of flash */
        storage_partition: partition@1e800 {
            reg = <0x0001e800 0x00001800>;
        };
    };
};
